{
  "mcpServers": {
    "notion": {
      "command": "notion-mcp-server",
      "args": [],
      "env": {
        "OPENAPI_MCP_HEADERS": "{\"Authorization\": \"Bearer ${NOTION_API_KEY}\", \"Notion-Version\": \"2022-06-28\"}"
      }
    },
    "firecrawl": {
      "command": "firecrawl-mcp",
      "args": [],
      "env": {
        "FIRECRAWL_API_KEY": "${FIRECRAWL_API_KEY}"
      }
    },
    "apollo": {
      "command": "apollo-io-mcp",
      "args": [],
      "env": {
        "APOLLO_API_KEY": "${APOLLO_API_KEY}"
      }
    },
    "gmail-fcpo": {
      "command": "gmail-mcp",
      "args": [],
      "env": {
        "GOOGLE_CLIENT_ID": "${GOOGLE_CLIENT_ID}",
        "GOOGLE_CLIENT_SECRET": "${GOOGLE_CLIENT_SECRET}",
        "GOOGLE_REFRESH_TOKEN": "${GOOGLE_REFRESH_TOKEN_FCPO}"
      }
    },
    "gmail-hi": {
      "command": "gmail-mcp",
      "args": [],
      "env": {
        "GOOGLE_CLIENT_ID": "${GOOGLE_CLIENT_ID}",
        "GOOGLE_CLIENT_SECRET": "${GOOGLE_CLIENT_SECRET}",
        "GOOGLE_REFRESH_TOKEN": "${GOOGLE_REFRESH_TOKEN_HI}"
      }
    },
    "calendar-fcpo": {
      "command": "mcp-google-calendar",
      "args": [],
      "env": {
        "GOOGLE_CLIENT_ID": "${GOOGLE_CLIENT_ID}",
        "GOOGLE_CLIENT_SECRET": "${GOOGLE_CLIENT_SECRET}",
        "GOOGLE_REFRESH_TOKEN": "${GOOGLE_REFRESH_TOKEN_FCPO}",
        "DEFAULT_TIMEZONE": "America/Toronto"
      }
    },
    "calendar-hi": {
      "command": "mcp-google-calendar",
      "args": [],
      "env": {
        "GOOGLE_CLIENT_ID": "${GOOGLE_CLIENT_ID}",
        "GOOGLE_CLIENT_SECRET": "${GOOGLE_CLIENT_SECRET}",
        "GOOGLE_REFRESH_TOKEN": "${GOOGLE_REFRESH_TOKEN_HI}",
        "DEFAULT_TIMEZONE": "America/Toronto"
      }
    },
    "fellow": {
      "command": "fellow-mcp",
      "args": [],
      "env": {
        "FELLOW_API_KEY": "${FELLOW_API_KEY}",
        "FELLOW_SUBDOMAIN": "${FELLOW_SUBDOMAIN}"
      }
    },
    "clay": {
      "command": "clay-mcp",
      "args": [],
      "env": {
        "CLAY_API_KEY": "${CLAY_API_KEY}"
      }
    }
  }
}
